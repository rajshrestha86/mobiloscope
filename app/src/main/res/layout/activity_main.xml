<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:padding="0dp"

    android:id="@+id/r">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:padding="0dp">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:columnCount="1"
            android:orientation="horizontal"
            android:id="@+id/gridLayout"
            android:padding="0dp"
            android:nestedScrollingEnabled="true" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/layout2"
                android:padding="0dp"
                android:cropToPadding="true"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/terminalButton"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="true"
                android:onClick="clicked"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="0dp"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/layout"
                android:cropToPadding="true"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ohmButton"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:padding="0dp"
                android:layout_row="3"
                android:onClick="ohmStart"
                android:layout_column="0"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/resbg" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/smallDC"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:onClick="dcmStart"
                android:padding="0dp"
                android:layout_row="4"
                android:layout_column="0"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/dcbg" />



            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/acVoltage"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:padding="0dp"
                android:layout_row="6"
                android:cropToPadding="true"
                android:onClick="acStart"
                android:scaleType="fitXY"
                android:layout_column="0"
                android:src="@drawable/acbg" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/largeDC"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:onClick="dcm2Start"
                android:padding="0dp"
                android:layout_row="7"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:layout_column="0"
                android:src="@drawable/dc2bg" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/oscilloscope"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:onClick="startOscilloscope"
                android:padding="0dp"
                android:layout_row="8"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:layout_column="0"
                android:src="@drawable/oscilloscope" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/dualChannel"
                android:layout_columnWeight="0"
                android:gravity="center"
                android:padding="0dp"
                android:layout_row="9"
                android:cropToPadding="true"
                android:onClick="dualStart"
                android:scaleType="fitXY"
                android:layout_column="0"
                android:src="@drawable/dual" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>
